---
import Search from "../components/Search.astro";
const navItems = [
  { href: "#", text: "Home" },
  { href: "#", text: "Menu" },
  { href: "#", text: "Our Story" },
  { href: "#", text: "Contact Us" },
];
---

<nav
  class="bg-transparent text-white flex w-full flex-wrap items-center justify-end p-4 md:p-8"
>
  <ul class="flex gap-4 text-sm md:gap-8 md:text-sm">
    {
      navItems.map((item, index) => (
        <li class="hover:text-white/50 font-sans font-semibold uppercase tracking-widest transition-colors">
          <a href={item.href}>{item.text}</a>
        </li>
      ))
    }
  </ul>
  <Search />
</nav>
